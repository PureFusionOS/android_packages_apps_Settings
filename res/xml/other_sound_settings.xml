<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="other_sound_settings"
    android:title="@string/other_sound_settings">

    <!-- Dial pad tones -->
    <SwitchPreference
        android:key="dial_pad_tones"
        android:title="@string/dial_pad_tones_title" />

    <!-- Screen locking sounds -->
    <SwitchPreference
        android:key="screen_locking_sounds"
        android:title="@string/screen_locking_sounds_title" />

    <!-- Screenshot sounds -->
    <SwitchPreference
        android:key="screenshot_sound"
        android:title="@string/screenshot_sound_title" />

    <!-- Docking sounds -->
    <SwitchPreference
        android:key="docking_sounds"
        android:title="@string/docking_sounds_title" />

    <!-- Volume adjustment sounds -->
    <SwitchPreference
        android:key="volume_adjust_sounds"
        android:title="@string/volume_adjust_sounds_title" />

    <!-- Vibrate on vibration mode entered -->
    <SwitchPreference
        android:key="vibration_mode_indication"
        android:title="@string/vibration_mode_indication_title" />

    <!-- Touch sounds -->
    <SwitchPreference
        android:key="touch_sounds"
        android:title="@string/touch_sounds_title" />

    <!-- Vibrate on touch -->
    <SwitchPreference
        android:key="vibrate_on_touch"
        android:title="@string/vibrate_on_touch_title" />

    <!-- Dock speaker plays -->
    <DropDownPreference
        android:key="dock_audio_media"
        android:summary="%s"
        android:title="@string/dock_audio_media_title" />

    <!-- Boot sounds -->
    <SwitchPreference
        android:key="boot_sounds"
        android:title="@string/boot_sounds_title" />

    <!-- Emergency tone -->
    <DropDownPreference
        android:key="emergency_tone"
        android:summary="%s"
        android:title="@string/emergency_tone_title" />

    <PreferenceCategory android:title="@string/power_notifications_category_title" />

    <ListPreference
        android:entries="@array/power_notification_entries"
        android:entryValues="@array/power_notification_values"
        android:key="power_notifications"
        android:title="@string/power_notifications_conditions_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="power_notifications_vibrate"
        android:title="@string/power_notifications_vibrate_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="power_notifications_custom_ringtone"
        android:title="@string/power_notifications_custom_ringtone_title" />

    <Preference
        android:key="power_notifications_ringtone"
        android:title="@string/power_notifications_ringtone_title" />

</PreferenceScreen>
